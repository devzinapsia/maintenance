<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="maintenance_request_form_template" name="Maintenance Request Form">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container mt-5 mb-5">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="card shadow-sm">
                                <div class="card-body p-4">
                                    <h1 class="text-center mb-4">Solicitud de Mantenimiento</h1>
                                    
                                    <t t-if="error_message">
                                        <div class="alert alert-danger">
                                            <t t-foreach="error_message" t-as="err">
                                                <p class="mb-0"><t t-esc="err"/></p>
                                            </t>
                                        </div>
                                    </t>
                                    
                                    <form action="/maintenance/request/submit" method="post" enctype="multipart/form-data">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        
                                        <div class="mb-3">
                                            <label class="form-label">Responsable (Solicitado por) <span class="text-danger">*</span></label>
                                            <select name="employee_id" class="form-select" required="required">
                                                <option value="">-- Seleccione un empleado --</option>
                                                <t t-foreach="employees" t-as="employee">
                                                    <option t-att-value="employee.id"><t t-esc="employee.name"/></option>
                                                </t>
                                            </select>
                                            <small class="form-text text-muted">Seleccione el empleado que solicita el mantenimiento.</small>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label class="form-label">Equipo de Mantenimiento <span class="text-danger">*</span></label>
                                            <select name="maintenance_team_id" class="form-select" required="required">
                                                <option value="">-- Seleccione un equipo --</option>
                                                <t t-foreach="maintenance_teams" t-as="team">
                                                    <option t-att-value="team.id"><t t-esc="team.name"/></option>
                                                </t>
                                            </select>
                                            <small class="form-text text-muted">Seleccione el equipo que gestionará esta solicitud.</small>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label class="form-label">Equipo Averiado <span class="text-danger">*</span></label>
                                            <select name="equipment_id" class="form-select" required="required">
                                                <option value="">-- Seleccione un equipo --</option>
                                                <t t-foreach="equipments" t-as="equipment">
                                                    <option t-att-value="equipment.id">
                                                        <t t-esc="equipment.name"/>
                                                        <t t-if="equipment.category_id"> - <t t-esc="equipment.category_id.name"/></t>
                                                    </option>
                                                </t>
                                            </select>
                                            <small class="form-text text-muted">Seleccione el equipo que requiere mantenimiento.</small>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label class="form-label">Descripción del Problema <span class="text-danger">*</span></label>
                                            <textarea name="description" class="form-control" rows="3" required="required" placeholder="Describa detalladamente el problema detectado..."></textarea>
                                        </div>
                                        
                                        <div class="mb-4">
                                            <label class="form-label">Archivo adjunto</label>
                                            <input type="file" name="attachment" class="form-control" accept="image/*,.pdf,.doc,.docx,.txt"/>
                                            <small class="form-text text-muted">Adjunte fotos o documentos relacionados (opcional).</small>
                                        </div>
                                        
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-primary btn-lg">
                                                <i class="fa fa-paper-plane me-2"></i>Enviar Solicitud
                                            </button>
                                        </div>
                                        
                                        <p class="text-center text-muted mt-3 mb-0"><small>* Campos obligatorios</small></p>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="maintenance_request_thanks_template" name="Maintenance Request Thanks">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container mt-5 mb-5">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="card shadow-sm text-center">
                                <div class="card-body p-5">
                                    <i class="fa fa-check-circle text-success mb-4" style="font-size: 4rem;"></i>
                                    <h1 class="mb-4">¡Solicitud Enviada Satisfactoriamente!</h1>
                                    <p class="lead mb-3">Su solicitud de mantenimiento ha sido registrada exitosamente.</p>
                                    <p class="text-muted mb-4">Nuestro equipo técnico revisará su solicitud y se pondrá en contacto con usted a la brevedad.</p>
                                    <t t-if="request_id">
                                        <div class="alert alert-info d-inline-block mb-4">
                                            <strong>Número de solicitud:</strong> #<t t-esc="request_id"/>
                                        </div>
                                    </t>
                                    <div>
                                        <a href="/maintenance/request" class="btn btn-primary btn-lg me-2">
                                            <i class="fa fa-plus me-2"></i>Nueva Solicitud
                                        </a>
                                        <a href="/" class="btn btn-outline-secondary btn-lg">
                                            <i class="fa fa-home me-2"></i>Volver al Inicio
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <record id="menu_maintenance_request" model="website.menu">
        <field name="name">Solicitud de Mantenimiento</field>
        <field name="url">/maintenance/request</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence">80</field>
    </record>
</odoo>